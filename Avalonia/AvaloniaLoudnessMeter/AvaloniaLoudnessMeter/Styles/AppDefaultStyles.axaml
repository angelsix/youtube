<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:app="clr-namespace:AvaloniaLoudnessMeter"
        >
    <Design.PreviewWith>
        <Border Background="{DynamicResource White}">
            <StackPanel Margin="50">
                <Label Content="My Title" />
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <!-- Label -->
    <Style Selector="Label">
        <Setter Property="Foreground" Value="Black"></Setter>
    </Style>
    
    <Style Selector="Expander.small">
        <Setter Property="Theme" Value="{DynamicResource SmallExpander}"></Setter>
    </Style>
    
    <Style Selector="Button">
        <Setter Property="Background" Value="#ddd"></Setter>
        <Setter Property="Foreground" Value="Black"></Setter>
    </Style>

    
</Styles>
